<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10px"
                tools:context="mavonie.subterminal.Views.JumpView">

    <RelativeLayout
        android:id="@+id/jump_view_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:paddingBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:gravity="left"
                        android:text="Exit:"
                        android:layout_span="1"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/jump_view_exit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_span="1"
                        android:text="Exit"
                        android:textAppearance="?attr/textAppearanceListItem"/>

                    <TextView
                        android:id="@+id/jump_view_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:gravity="right"
                        android:text="Date"
                        android:textAppearance="?attr/textAppearanceListItem"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Rig:"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/jump_view_rig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:layout_span="2"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceListItem"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lighter_gray"/>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Delay"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="PC"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Slider"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/jump_view_delay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="delay"
                        android:gravity="center_horizontal"
                        android:textAppearance="?attr/textAppearanceListItem"/>


                    <TextView
                        android:id="@+id/jump_view_pc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="pc size"
                        android:gravity="center_horizontal"
                        android:textAppearance="?attr/textAppearanceListItem"/>

                    <TextView
                        android:id="@+id/jump_view_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="slider"
                        android:paddingRight="16dp"
                        android:textAppearance="?attr/textAppearanceListItem"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lighter_gray"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/jump_view_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Description"
                        android:layout_span="3"
                        android:gravity="left"
                        android:textAppearance="?attr/textAppearanceListItem"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jump_view_image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jump_view_detail_card">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/exit_picture_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Picture"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:id="@+id/horizontal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:layout_weight="3">

                        <LinearLayout
                            android:id="@+id/image_thumbs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="2"
                            android:orientation="horizontal">
                        </LinearLayout>

                    </HorizontalScrollView>

                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>